@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success rounded-1">
        <i class="fas fa-plus-circle"></i> Yeni Kayıt
    </a>
</p>

<table class="table table-striped table-hover table-bordered display responsive nowrap" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentId)
            </th>
            <th style="width:8%">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (item.Parent != null)
                    {
                        @Html.DisplayFor(modelItem => item.Parent.Name)
                    }
                    else
                    {
                        <span class="text-danger">No Parent</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning rounded-1">
                        <i class="fas fa-edit"></i>
                    </a>

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary rounded-1">
                        <i class="fas fa-info-circle"></i>
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger rounded-1">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

